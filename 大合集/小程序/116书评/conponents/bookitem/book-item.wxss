/* conponents/bookitem/book-item.wxss */
.book{
    width: 240rpx;
    height: 360rpx;
    border-radius: 5px;
    box-shadow: 0 0 10rpx 3rpx #999;
    position: relative;
}
.back{
    width: 100%;
    height: 100%;
    border-radius: 5px;
}
.book-detail{
    width: 100%;
    height: 64px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    z-index: 100;
    position: absolute;
    left:0px;
    bottom:0px;
    color: #999;
    background: #fff;
    border-bottom-left-radius: 15rpx;
    border-bottom-right-radius: 15rpx;
}
.title{
    color: black;
    font-size: 25rpx;
    margin-top: 7px;
    margin-bottom: 7px;
}
.author{
    font-size:25rpx;
    color: #999;
}
.fav{
    font-size:28rpx;
    color: #999;
    position: absolute;
    right: 5px;
    bottom: 2px;
}